import json
import boto3

def lambda_handler(event, context):
    # Initialize the boto3 EMR client
    emr_client = boto3.client('emr')
    
    # Get the cluster ID from the event or hardcode it here
    cluster_id = event.get('cluster_id', 'j-test12532')  # Replace with your cluster ID if not passed via event
    
    try:
        # Get cluster status
        response = emr_client.describe_cluster(ClusterId=cluster_id)
        cluster_status = response['Cluster']['Status']['State']
        
        # Return the cluster status
        return {
            'statusCode': 200,
            'body': json.dumps({
                'ClusterId': cluster_id,
                'Status': cluster_status
            })
        }
    
    except Exception as e:
        # Handle any errors
        return {
            'statusCode': 500,
            'body': json.dumps({
                'error': str(e)
            })
        }
