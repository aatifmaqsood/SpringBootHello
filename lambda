import boto3

emr = boto3.client('emr')

def lambda_handler(event, context):
    cluster_name = event['ClusterName']
    try:
        response = emr.describe_cluster(ClusterId=cluster_name)
        cluster_status = response['Cluster']['Status']
        return {
            'statusCode': 200,
            'body': cluster_status
        }
    except emr.exceptions.ClientError as e:
        if e.response['Error']['Code'] == 'ClusterNotFound':
            return {
                'statusCode': 404,
                'body': 'Cluster not found'
            }
        else:
            return {
                'statusCode': 500,
                'body': 'Error describing cluster'
            }
